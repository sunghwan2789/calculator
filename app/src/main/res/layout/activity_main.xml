<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/expression_hint"
            android:inputType="none"
            android:gravity="right|bottom"
            android:id="@+id/expressionEditText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|top"
            android:id="@+id/resultTextView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="7">

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="📝"
            android:id="@+id/historyButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="IMPORT"
            android:id="@+id/importButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="EXPORT"
            android:id="@+id/exportButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="DEL"
            android:id="@+id/deleteButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="AND"
            android:id="@+id/andOperatorButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="OR"
            android:id="@+id/orOperatorButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="NOT"
            android:id="@+id/notOperatorButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="XOR"
            android:id="@+id/xorOperatorButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="+/−"
            android:id="@+id/signOperatorButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="()"
            android:id="@+id/parenthesisOperatorButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="%"
            android:id="@+id/remainOperatorButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="÷"
            android:id="@+id/divideOperatorButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="7"
            android:id="@+id/sevenButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="8"
            android:id="@+id/eightButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="9"
            android:id="@+id/nineButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="×"
            android:id="@+id/multiplyOperatorButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="4"
            android:id="@+id/fourButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="5"
            android:id="@+id/fiveButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="6"
            android:id="@+id/sixButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="−"
            android:id="@+id/subtractOperatorButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="1"
            android:id="@+id/oneButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="2"
            android:id="@+id/twoButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="3"
            android:id="@+id/threeButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="+"
            android:id="@+id/addOperatorButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:text="0"
            android:id="@+id/zeroButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="."
            android:id="@+id/dotButton"/>
        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:text="="
            android:id="@+id/equalOperatorButton"/>

    </GridLayout>


</LinearLayout>